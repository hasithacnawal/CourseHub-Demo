        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

// Also abort if both course and learner fields are not present
if (!current.course || !current.learner) {
  current.setAbortAction(true);
}

var dupCheck = new GlideRecord('x_quo_coursehub_course_subscription'); 
dupCheck.addQuery('course', current.course);
dupCheck.addQuery('learner', current.learner);

// Exclude current record in case of update
if (current.operation() === 'update') {
  dupCheck.addQuery('sys_id', '!=', current.sys_id);
}

dupCheck.query();

if (dupCheck.hasNext()) {
  gs.addErrorMessage("A subscription for this Course and Learner already exists.");
  current.setAbortAction(true); // aborting the insert action
}
})(current, previous);]]></script>
